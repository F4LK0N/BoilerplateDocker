#!/bin/sh

if [[ "$1" == '' ]]; then setup-fs-set-error "'STRING' required!"; return; fi;
if [[ "$2" == '' ]]; then setup-fs-set-error "'SIZE' required!"; return; fi;
if [[ "$3" == '' ]]; then setup-fs-set-error "'CHAR' required!"; return; fi;
string=${1};
size=${2}
char=${3};

while [[ ${#string} -ge 5 ]]
do
    echo -n "$segment";
    echo -n "$divider";
    ((size--));
done

