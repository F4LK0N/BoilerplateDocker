root = true

### GENERAL ###
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

### TEXT ###
[*.{md,txt}]
indent_size = 2
trim_trailing_whitespace = false

### GIT ###
[.{gitignore,gitconfig}]
insert_final_newline = false

### DOCKER ###
[Dockerfile]
insert_final_newline = false

[*compose.{yaml,yml}]
indent_size = 2
insert_final_newline = false

### HTML ###
[*.htm*]
insert_final_newline = false

[*.css]
insert_final_newline = false

### JS ###
[*.js]
insert_final_newline = false

[*.json]
indent_size = 2
insert_final_newline = false

### PHP ###
[*.php]
trim_trailing_whitespace = true

[*.phtml]
insert_final_newline = false
