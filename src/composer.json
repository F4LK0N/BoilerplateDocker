{
    "name": "f4lk0n/web",
    "type": "library",
    "description": "Front-End Framework based on JQuery and Foundation over Phalcon",
    "keywords": [
        "f4lk0n",
        "frontend",
        "framework",
        "jquery",
        "foundation",
        "phalcon"
    ],
    "homepage": "https://github.com/F4LK0N/BoilerplateDocker/tree/web",
    "license": "",
    "authors": [
        {
            "name": "F4lk0n",
            "email": "otaviosoria@gmail.com",
            "homepage": "https://github.com/F4LK0N",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "8.1.*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-xdebug": "3.2.1",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-phalcon": "*",
        "phalcon/devtools": "^4.2",
        "phalcon/ide-stubs": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        }
    },
    
    "require-dev": {
        "ext-dom": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*",
        "ext-xmlwriter": "*",
        "phpunit/phpunit": "10.*",
        "phpunit/php-code-coverage": "^10.0",
        "nikic/php-parser": "^4.15",
        "mockery/mockery": "*",
        "phalcon/devtools": "^4.2"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\App\\": "tests/app/",
            "Tests\\Core\\": "tests/core/"
        }
    },

    "scripts": {
        "da": "composer dumpautoload",
        "dao": "composer dumpautoload -o",

        "test":  "./vendor/bin/phpunit --no-coverage",
        "dox":   "./vendor/bin/phpunit --no-coverage --testdox",
        "cover": "./vendor/bin/phpunit",

        "core-test":  "./vendor/bin/phpunit --configuration phpunit-core.xml --no-coverage",
        "core-dox":   "./vendor/bin/phpunit --configuration phpunit-core.xml --no-coverage --testdox",
        "core-cover": "./vendor/bin/phpunit --configuration phpunit-core.xml"
    }

}
